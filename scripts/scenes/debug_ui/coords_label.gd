extends Label

################################################################################
# On-ready variables                                                           #
################################################################################

@onready var player: CharacterBody3D = get_node("/root/World/Player")

################################################################################
# Overridden built-in methods                                                  #
################################################################################

func _ready() -> void:
	update_text()

func _process(_delta: float) -> void:
	update_text()

################################################################################
# Custom methods                                                               #
################################################################################

func update_text() -> void:
	text = str("Coords: ", player.position)
